<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="2.5.0" method="upgrade">
    <name>Replication</name>
    <creationDate>mai 2012</creationDate>
    <author>Romain Gires</author>
    <authorEmail>composant@gires.net</authorEmail>
    <authorUrl>http://composant.gires.net</authorUrl>
    <copyright>This component is released under the GNU/GPL License. Copyright (C) 2007 - 2013 romain gires. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>2.5.2.5.RC5</version>
    <description>COM_REPLICATION_DESCRIPTION</description>

	<!-- Runs on install/uninstall/update; New in 1.6 -->
	<scriptfile>script.php</scriptfile>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 1.6 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	<media destination="com_replication" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
	</media>
	<administration>
		<languages folder="language">
			<language tag="en-GB">en-GB.com_replication.ini</language>
			<language tag="en-GB">en-GB.com_replication.sys.ini</language>
			<language tag="fr-FR">fr-FR.com_replication.ini</language>
			<language tag="fr-FR">fr-FR.com_replication.sys.ini</language>
		</languages>
		
		<!-- Administration Menu Section -->
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
		<menu img="../media/com_replication/images/replication-16x16.png">COM_REPLICATION_MENU</menu>
		<files folder="back">
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>licence.html</filename>
			<filename>replication.php</filename>
			<folder>controllers</folder>
			<folder>help</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
	</administration>
</install>

